doctype
html(ng-app='codecards')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    //bower:css
    //endbower
    link(rel='stylesheet', href='/public/app/css/styles.css')
  body
    .container(ng-controller='AddCardCtrl', ng-cloak)
      header
        h3 Codecards
      hr
      .row
        .col-md-9
          .cards
            h2(ng-hide='cards.length') No cards. Try to adde one.
            h2(ng-show='cards.length') Yours {{cards.length}} cards.
            .card(ng-repeat='card in cards')
              h3 {{card.title}}
              p {{card.text}}
              span.label.label-info(ng-show='card.date') {{getDate(card.date)}}
              span.glyphicon.glyphicon-remove(ng-click='remove(card._id)')
        .col-md-3
          h3 Add card
          .form-group(ng-class='{"has-error": errors.title}')
            label Title{{title ? ':' : ''}}  {{title}}
            input(class='form-control', ng-model='title')
          .form-group(ng-class='{"has-error": errors.text}')
            label Text
            textarea(class='form-control', ng-model='text')
          button.btn.btn-primary.btn-lg(type='button', ng-click='submit()') Submit

    //bower:js
    //endbower
    script(src='/public/app/app.js')
